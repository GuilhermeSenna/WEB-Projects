<%- include('partials/header') %>

    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="postTitle">
            <label for="post">Post</label>
            <textarea type="text" class="form-control" id="post" name="postBody" rows="5" cols="30"></textarea>
        </div>
        <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>

